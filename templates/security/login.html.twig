{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    {% if app.user %}
        <div class="p-3 mb-2 bg-success text-white">
            Vous êtes connecté en tant que ' {{ app.user.firstname }} {{ app.user.lastname }} ',
            avec l'adresse électronique ' {{ app.user.username }} '. <a href="{{ path('app_logout') }}" class="text-danger">- Logout -</a>
        </div>
    {% endif %}

<form class="container-fluid mt-5 w-75" method="post">
    <div class="card--3D-vertical">

        <div class="d-flex flex-row justify-content-between w-100">
            <!---->
            <h1 class="h3 mb-3 font-weight-normal">Identifiez-vous : <small class="small-title-message">(* champs obligatoire)</small></h1>
            <!---->
            {% if app.user is null %}
            <div class="d-flex flex-row justify-content-between align-items-center">
                Mot de passe oublié ?
                &ensp;
                <a class="btn btn-bg btn--secondary" href="{#{{ path('profile_pwd') }}#}">
                    <i class="ri-key-2-line"></i>
                    Reinitialiser le mot de passe (RESTE A DEVELOPPER)
                </a>
            </div>
            {% endif %}
        </div>

        <label class="required" for="inputEmail">Adresse électronique :</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placholder="ex: mon@email.fr" required autofocus>
        <br>
        <label class="required" for="inputPassword">Mot de passe :</label>
        <input type="password" name="password" id="inputPassword" class="form-control" placholder="Saisir votre mot de passe" required>
        <br>
        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me">
                    Se souvenir de moi
                </label>
            </div>
        #}
        
        <div class="d-flex justify-content-between w-100">
            <button class="btn btn-sm btn--blue" type="submit">
            <!-- <button class="btn btn-lg btn-primary" type="submit"> -->
                <i class="ri-login-box-line"></i>
                Se connecter
            </button>
            {% if app.user is null %}
            <div class="d-flex justify-content-between align-items-center">
                Pas encore de compte ?
                &ensp;
                <a class="btn btn-bg btn--secondary" href="{{ path('registration_user') }}">
                    <i class="ri-record-circle-line"></i>
                    Créer un compte
                </a>
            </div>
            {% endif %}
        </div>
        
    </div>
</form>
{% endblock %}
