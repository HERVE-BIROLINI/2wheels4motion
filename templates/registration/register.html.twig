{% extends 'base.html.twig' %}

{% block title %}Enregistrement{% endblock %}

{% block body %}

<!-- Zone d'affichage des messages "FLASH" venant du Controller -->
{{ include('_flash.html.twig') }}

<form class="container-fluid mt-3 mb-3 w-75" method="post"> 
    <div class="card--3D-vertical">
        <h1 class="h3 mb-3 font-weight-normal">Enregistrez-vous :</h1>

        {{ form_start(registrationForm,{attr:{novalidate:"novalidate"}}) }}
        {{ form_end(registrationForm) }}
        <a href="{{ asset('build/images/footer/CGU.html') }}" target="_blank">Consulter les Conditions Générales d'Utilisation</a>
        <br>

        <div class="btns--row">
            <button type="submit" class="btn btn-sm btn--blue">
                <i class="ri-profile-line"></i>&ensp;Créer le compte
            </button>
            {% if app.user is null %}
            <div class="d-flex flex-row flex-wrap justify-content-between align-items-center">
                Vous avez déjà un compte ?
                &ensp;
                <a class="btn btn-sm btn--secondary" href="{{ path('security_login') }}">
                    <i class="ri-login-box-line"></i>&ensp;Se connecter
                </a>
            </div>
            {% endif %}
        </div>
        <small style="color:red;">(* champs obligatoire)</small>
    </div><!-- FIN de la Carte3D -->
</form><!-- </div> FIN du Container Bootstrap -->
{% endblock %}
