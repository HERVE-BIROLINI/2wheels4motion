{% extends 'base.html.twig' %}
{% set Title="Modification Avatar" %}
{% block title %}{{ parent() }} - {{ Title }}{% endblock %}

{% block body %}

    {{ include('profile/banner.html.twig') }}
    <form class="modal--big container-fluid mt-5" method="post" enctype="multipart/form-data">
        <h1 class="h3 mb-3 font-weight-normal">Choississez votre photo de profil :</h1>
        
{#{{ dump(form) }}
{{ dump(uploadroot) }}
{{ form_start(form) }}
{{ form_widget(form) }}
