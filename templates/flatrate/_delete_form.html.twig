<form id="delete" method="post" 
    action="{{ path('flatrate_delete', {'flatrate': flatrate.id}) }}"
    onsubmit="return confirm('Voulez-vous vraiment supprimer ce tarif ?');"
>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ flatrate.id) }}">
    <button class="btn btn-sm btn--red" href="{{ path('flatrate_delete', {'flatrate': flatrate.id}) }}"
        title="Supprimer" type='submit'
    >
        <i class="ri-delete-bin-6-line"></i>
        Supprimer
    </button>
</form>
